<Window x:Class="ForeignExchangeConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForeignExchangeConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="650">
    <Grid>
        <TabControl>
            <TabItem Header="Simple (MXN/USD)">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Tipo de conversión:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="135" FontWeight="Bold"/>
                    <RadioButton x:Name="PesosToDollarsRadioButton" Content="Pesos (MXN) a Dolares (USD)" HorizontalAlignment="Left" Margin="185,17,0,0" VerticalAlignment="Top" IsChecked="True"/>
                    <RadioButton x:Name="DollarsToPesosRadioButton" Content="Dolares (USD) a Pesos (MXN)" HorizontalAlignment="Left" Margin="415,17,0,0" VerticalAlignment="Top"/>
                    <Label Content="Importe:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
                    <TextBox x:Name="AmountTextBox" HorizontalAlignment="Left" Margin="100,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="520" Height="26" FontSize="14"/>
                    <Label Content="Resultado de la conversión:" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Width="165" FontWeight="Bold"/>
                    <Label x:Name="ForeignExchangeResultLabel" Content="" HorizontalAlignment="Left" Margin="205,98,0,0" VerticalAlignment="Top" Width="415" FontWeight="Bold" Foreground="#FF049606"/>
                    <Label Content="Tasa de cambio:" HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" Width="108" FontWeight="Bold"/>
                    <Label x:Name="ExchangeRateLabel" HorizontalAlignment="Left" Margin="140,145,0,0" VerticalAlignment="Top" Width="479" FontWeight="Bold" Foreground="#FF0B3EBB" Height="26"/>
                    <Label Content="Fecha y hora de actualización (UTC):" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Width="215" FontWeight="Bold"/>
                    <Label x:Name="DateAndTimeOfUpdateLabel" Content="" HorizontalAlignment="Left" Margin="240,197,0,0" VerticalAlignment="Top" Width="378" FontWeight="Bold" Foreground="#FF0B3EBB"/>
                    <Button x:Name="ConvertButton" Content="Convertir" HorizontalAlignment="Center" Margin="0,245,0,0" VerticalAlignment="Top" Height="35" Width="445" Background="#FF7DDAF9" Click="ConvertButtonClick"/>
                </Grid>
            </TabItem>
            <TabItem Header="Internacional">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
